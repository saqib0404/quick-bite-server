model MenuItem {
    id           String     @id @default(cuid())
    restaurantId String
    restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

    name        String
    description String?
    priceCents  Int
    imageUrl    String?
    isAvailable Boolean @default(true)

    cuisine CuisineType

    orders  Order[]
    reviews Review[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([restaurantId])
}

enum CuisineType {
    MEAT
    FISH
    VEG
    VEGAN
}
