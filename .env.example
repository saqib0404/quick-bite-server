# Backend Environment Variables Template
# Copy this to .env in quick-bite-server directory

# Node Environment
NODE_ENV=development

# Database Connection
DATABASE_URL=postgresql://user:password@localhost:5432/quick_bite_db

# Frontend URLs (CORS and trusted origins)
APP_URL=http://localhost:3000
PROD_APP_URL=https://your-frontend.vercel.app
FRONTEND_URL=https://your-frontend.vercel.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Vercel Auto-set (no need to set manually)
# VERCEL_ENV=preview|production
